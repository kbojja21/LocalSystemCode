<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">
	
  
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.controller.FirstServletLogin</servlet-class>
	</servlet>
	
	
	<servlet>
		<servlet-name>signup</servlet-name>
		<servlet-class>com.controller.AjaxServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>signup1</servlet-name>
		<servlet-class>com.controller.FirstServletSignup</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>emailSecurity</servlet-name>
		<servlet-class>com.controller.EmailSecurity</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/FirstLoginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/FirstServletAjax</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>signup1</servlet-name>
		<url-pattern>/FirstServletSignup</url-pattern>
	</servlet-mapping>
		
	<servlet-mapping>
		<servlet-name>emailSecurity</servlet-name>
		<url-pattern>/EmailQuestionAjax</url-pattern>
	</servlet-mapping>
	
	 

</web-app> 
